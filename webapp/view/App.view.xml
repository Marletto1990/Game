<mvc:View controllerName="my_amazingapptempest.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m"  xmlns:f="sap.ui.layout.form">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>Simple form}">
				<content>
					<f:SimpleForm id="SimpleFormChange354" editable="true" layout="ResponsiveGridLayout" >
						<f:content>
							<Panel >
								<headerToolbar>
									<Toolbar>
										<Title level="H2" text="ТУТ БУДЕТ МЕНЮ"/>
									</Toolbar>
								</headerToolbar>
								<FlexBox 
										height="400px"
										alignItems="Center"
										justifyContent="Center">
									<Label text="{/Form/0/firstname}" />
									<Input value="{/Form/0/firstname}"/>
									<Button text="set default"
											press="onPress2"
											type="Emphasized"
											class="sapUiSmallMarginEnd"/>

									<Input value="{/Form/0/firstname}"/>
									<Button 
											text="{/Form/0/test}"
											press = "onPress"
											type="Reject"/>
								</FlexBox>
									
							</Panel>
							<Panel expandable = "true" expanded="true" >
								<headerToolbar>
									<Toolbar>
										<Title level="H2" text="ТУТ БУДЕТ МЕНЮ" />
									</Toolbar>
								</headerToolbar>
								<FlexBox height="400px"
										 alignItems="Center"
										 justifyContent="Start">
										<items>

											<RadioButtonGroup   columns = '1' 
																valueState = "Warning"
				 												buttons = "{/All_Classes/}">
												
												<RadioButton    select = "onMenuSelect"
																text = "{class}"
																class="sapUiSmallMarginEnd"/>		

											</RadioButtonGroup>

											<Image src="{/Image_Show/0/src}" 
													class="myImage1"
													height="300px"
													load="onImageLoad"
													error="onImageError">
											</Image>
													
										</items>
								</FlexBox>			
							</Panel>
						</f:content>
					</f:SimpleForm>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>